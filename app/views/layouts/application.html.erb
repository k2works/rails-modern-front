<!DOCTYPE html>
<html>
<head>
  <title>RailsModernFront</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Rails Modern Front', :root, class: 'navbar-brand' %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'DashBoard', :root %></li>

        <li><a href="#">Settings</a></li>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Help</a></li>
      </ul>
      <form class="navbar-form navbar-right">
        <input type="text" class="form-control" placeholder="Search...">
      </form>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
        <li><%= link_to 'Layout', :layout_gird %></li>
        <li><%= link_to 'Form', :form_form_control %></li>
        <li><%= link_to 'UI', :user_interface_ui %></li>
        <li><%= link_to 'JavaScript', :java_script_js %></li>
        <li><%= link_to 'JavaScript(Affix)', :java_script_affix %></li>
      </ul>
      <ul class="nav nav-sidebar">
        <li><%= link_to 'JavaScript Sample', :java_script_sample_js_sample %></li>
        <li><%= link_to 'JavaScript Sample(Canvas)', :java_script_sample_js_sample_canvas %></li>
        <li><%= link_to 'JQuery Sample(animation)', :jquery_sample_jquery_sample_animation %></li>
        <li><%= link_to 'JQuery Sample(menu)', :jquery_sample_jquery_sample_menu %></li>
        <li><%= link_to 'JQuery Sample(form)', :jquery_sample_jquery_sample_form %></li>
        <li><a href="">Another nav item</a></li>
        <li><a href="">More navigation</a></li>
      </ul>
      <ul class="nav nav-sidebar">
        <li><a href="">Nav item again</a></li>
        <li><a href="">One more nav</a></li>
        <li><a href="">Another nav item</a></li>
      </ul>
    </div>

    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <%= yield %>
    </div>

  </div>
</div>
</body>
</html>
